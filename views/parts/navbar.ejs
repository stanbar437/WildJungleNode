        .navbarLeftLeft {
            display: none;
        }
        .navbarLeft {
            color: #EB5C37;
            font-size: 36px;
            padding: 10px;
            margin-left: 20px;
        }
        .navbarMenu {
            display: block;
            position: relative;
            font-size: 28px;
            font-weight: 700;
            background-color: #000000;
            height: 0px;
            width: 243px;
            border: solid;
            border-width: 0px 0px 60px 50px;
            border-color: transparent transparent #EB5C37 transparent;
        }
        .navbarMenu a {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, 50%);
            color: #000000;
            text-decoration: none;
        }
        .navbarRight {
            display: flex;
        }
        .navbarIcon {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 15px;
            width: 100px;
        }
        .navbarIcon a {
            display: inline;
        }
    }
</style>
</head>

