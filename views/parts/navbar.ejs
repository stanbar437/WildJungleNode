<style>
    html {
        font-family: 'Playfair Display', serif;
    }
    .navbar{
        position: fixed;
    }
    .navbarLeftLeft i {
        font-size: 24px;
    }
    .navbarLeftLeft a {
        display: block;
        margin: 10px;
        width: 40px;
        height: 40px;
        color: #EB5C37;
        text-align: center;
        line-height: 45px;
    }
    .navbarLeft {
        color: #EB5C37;
        font-size: 24px;
        padding: 15px;
        font-weight: 600;
    }
    .navbar {
        width: 100%;
        height: 60px;
        background-color: #000000;
        display: flex;
        justify-content: space-between;
    }

    .navbarIcon a {
        display: none;
        color: #EB5C37;
    }

    .navbarIcon a:last-child {
        display: inline;
    }

    .navbarMenu {
        display: none;
    }

    .navbarIcon {
        margin: 10px;
        width: 40px;
        height: 40px;
        font-size: 24px;
        text-align: center;
        line-height: 35px;
    }
    .container{
        padding-top: 60px;
    }
